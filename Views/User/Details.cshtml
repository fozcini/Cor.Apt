<script>
    function showDocument(name) { 
        document.getElementById('show').src = "/doc/"+name;
    }
    function getWeights(pid) {
        $.ajax({
            type: "POST",
            url: ("/Weight/Get?pid=" + pid),
            error: function(xhr, status, error) {
                console.log(error)
            },
            success: function(response) {
                document.getElementById("weightRecords").innerHTML = ""
                response.forEach(e => {
                    var h6 = '<div class="d-flex flex-column"><h6 class="mb-3 text-sm">Kayıt Tarihi:</h6><span class="text-xs">' + e.RecordDate + '</span></div>'
                    var div = '<div class="ms-auto text-end">'+
                                '<a class="btn btn-link text-danger text-gradient px-3 mb-0" onclick="(removeWeight(' + e.WeightRecordId + '))" ><i class="far fa-trash-alt me-2" aria-hidden="true"></i>Sil</a>'+
                                '<a class="btn btn-link text-dark px-3 mb-0" onclick=' +'showDocument("' + e.RecordName + '")' + '><i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true"></i>Göster</a>'+
                              '</div>'
                    var li = '<li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg" id="' + e.WeightRecordId + '">' + h6 + div + '</li>'
                    document.getElementById("weightRecords").innerHTML += li
                })
            }
        });
    }
    function getAnalysis(pid) {
        $.ajax({
            type: "POST",
            url: ("/Analysis/Get?pid=" + pid),
            error: function(xhr, status, error) {
                console.log(error)
            },
            success: function(response) {
                document.getElementById("analysisRecords").innerHTML = ""
                response.forEach(e => {
                    var h6 = '<div class="d-flex flex-column"><h6 class="mb-3 text-sm">Kayıt Tarihi:</h6><span class="text-xs">' + e.AnalysisDate + '</span></div>'
                    var div = '<div class="ms-auto text-end">'+
                                '<a class="btn btn-link text-danger text-gradient px-3 mb-0" onclick="(removeAnalysis(' + e.AnalysisId + '))"><i class="far fa-trash-alt me-2" aria-hidden="true"></i>Sil</a>'+
                                '<a class="btn btn-link text-dark px-3 mb-0" onclick=' +'showDocument("' + e.AnalysisFolderName + '")' + '><i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true"></i>Göster</a>'+
                              '</div>'
                    var li = '<li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg" id="' + e.AnalysisId +'">' + h6 + div + '</li>'
                    document.getElementById("analysisRecords").innerHTML += li
                })
            }
        });
    }
    function removeWeight(weightId) {
        $.ajax({
            type: "POST",
            url: ("/Weight/Remove?weightId=" + weightId),
            error: function(xhr, status, error) {
                console.log(error)
            },
            success: function(response) {
                document.getElementById(response).remove();
            }
        });
    }
    function removeAnalysis(analysisId) {
        $.ajax({
            type: "POST",
            url: ("/Analysis/Remove?analysisId=" + analysisId),
            error: function(xhr, status, error) {
                console.log(error)
            },
            success: function(response) {
                document.getElementById(response).remove();
            }
        });
    }
    function onUploadSuccess(args) {
        getWeights(patientId);
        getAnalysis(patientId);
    }
</script>

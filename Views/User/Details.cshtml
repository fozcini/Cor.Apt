        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12 col-xl-4">
                    <div class="card h-100">
                        <div class="card-header pb-0 p-3">
                            <div class="row">
                                <div class="col-md-8 d-flex align-items-center">
                                    <h6 class="mb-0">Hasta Bilgileri</h6>
                                </div>
                                <div class="col-md-4 text-end">
                                    <a href="javascript:;">
                                        <i class="fas fa-user-edit text-secondary text-sm" data-bs-toggle="modal" data-bs-placement="top" title="Düzenle" data-bs-target="#patientModal"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-3">
                            <hr class="horizontal gray-light my-2">
                            <ul class="list-group">
                                <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">İsim Soyisim:</strong> &nbsp; @Model.FullName</li>
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Kimlik Numarası:</strong> &nbsp; @Model.IdentificationNumber</li>
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Doğum Tarihi:</strong> &nbsp; @Model.BirthDate.ToString("d")</li>
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Cinsiyet:</strong> &nbsp; @Model.Gender</li>
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Eposta:</strong> &nbsp; @Model.Email</li>
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Telefon:</strong> &nbsp; @Model.Phone</li>
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Adres:</strong> &nbsp; @Model.Address</li>
                            </ul>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="col-12 col-xl-8">
                    <div class="card h-100">
                        <div class="card-header pb-0 p-3">
                            <div class="row">
                                <div class="col-md-8 d-flex align-items-center">
                                    <h6 class="mb-0">Anamnezi</h6>
                                </div>
                                <div class="col-md-4 text-end">
                                    <a href="javascript:;">
                                        <i class="fas fa-edit text-secondary text-sm" data-bs-toggle="modal" data-bs-placement="top" title="Düzenle" data-bs-target="#anamnesisModal"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-3">
                            <hr class="horizontal gray-light my-2">
                            <ul class="list-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Yaş:</strong> &nbsp; @Anamnesis.Age</li>
                                    </div>
                                    <div class="col-md-6">
                                        <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Meslek:</strong> &nbsp; @Anamnesis.Profession</li>
                                    </div>
                                </div>
                                <hr class="horizontal gray-light my-1">
                                <div class="row">
                                    <div class="col-md-6">
                                        <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Boy:</strong> &nbsp; @Anamnesis.Height</li>
                                    </div>
                                    <div class="col-md-6">
                                        <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Kilo:</strong> &nbsp; @Anamnesis.Weight</li>
                                    </div>
                                </div>
                                <hr class="horizontal gray-light my-1">
                                <div class="row">
                                    <div class="col-md-6">
                                        <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Alkol:</strong> &nbsp; @Anamnesis.Alcohol</li>
                                    </div>
                                    <div class="col-md-6">
                                        <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Sigara:</strong> &nbsp; @Anamnesis.Smoking</li>
                                    </div>
                                </div>
                                <hr class="horizontal gray-light my-1">
                                <div class="row">
                                    <div class="col-md-6">
                                        <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">İshal - Kabız:</strong> &nbsp; @Anamnesis.ConstipationAndDiarrhea</li>
                                    </div>
                                    <div class="col-md-6">
                                        <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Alerji:</strong> &nbsp; @Anamnesis.Allergy</li>
                                    </div>
                                </div>
                                <hr class="horizontal gray-light my-1">
                                <div class="row">
                                    <div class="col-md-12">
                                        <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Diyet Öyküsü:</strong> &nbsp; @Anamnesis.Diet</li>
                                    </div>
                                </div>
                                <hr class="horizontal gray-light my-1">
                                <div class="row">
                                    <div class="col-md-12">
                                        <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Kullanılan İlaçlar:</strong> &nbsp; @Anamnesis.Drugs</li>
                                    </div>
                                </div>
                                <hr class="horizontal gray-light my-1">
                                <div class="row">
                                    <div class="col-md-12">
                                        <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Hastalık Öyküsü:</strong> &nbsp; @Anamnesis.Disease</li>
                                    </div>
                                </div>
                            </ul>
                        </div>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade show" id="analysis" role="tabpanel" aria-labelledby="analysis-tab">
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12 col-xl-4">
                    <div class="row">
                        <div class="card h-100">
                            <div class="card-header pb-0 px-3">
                                <div class="row">
                                    <div class="col-md-8 d-flex align-items-center">
                                        <h6 class="mb-0">Tartı Sonuçları</h6>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <a onclick="getWeights(@Model.PatientId)">
                                            <i class="fa fa-refresh text-secondary text-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Güncelle"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body pt-4 p-3">
                                <ul class="list-group">
                                    <div id="weightRecords">
                                        @foreach (var weightRecord in WeightRecords)
                                        {
                                        <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg" id="@weightRecord.WeightRecordId">
                                            <div class="d-flex flex-column">
                                                <h6 class="mb-3 text-sm">Kayıt Tarihi:</h6>
                                                <span class="text-xs">@weightRecord.RecordDate</span>
                                            </div>
                                            <div class="ms-auto text-end">
                                                <a class="btn btn-link text-danger text-gradient px-3 mb-0" onclick='(removeWeight("@weightRecord.WeightRecordId"))'><i class="far fa-trash-alt me-2" aria-hidden="true"></i>Sil</a>
                                                <a class="btn btn-link text-dark px-3 mb-0" onclick='showDocument("@weightRecord.RecordName")'><i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true"></i>Göster</a>
                                            </div>
                                        </li>
                                        }
                                    </div>
                                    <li class="list-group-item border-0 p-4 mb-2 bg-gray-100 border-radius-lg">
                                        <ejs-uploader id="UploadWeights" autoUpload="false" success="onUploadSuccess" asyncSettings="@asyncWeightSettings" allowedExtensions=".jpeg, .jpg, .png" locale="tr"></ejs-uploader>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="card h-100 mt-3">
                            <div class="card-header pb-0 px-3">
                                <div class="row">
                                    <div class="col-md-8 d-flex align-items-center">
                                        <h6 class="mb-0">Tahlil Sonuçları</h6>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <a onclick="getAnalysis(@Model.PatientId)">
                                            <i class="fa fa-refresh text-secondary text-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Güncelle"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body pt-4 p-3">
                                <ul class="list-group">
                                    <div id="analysisRecords">
                                        @foreach (var analysis in Analyses)
                                        {
                                        <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg" id="@analysis.AnalysisId">
                                            <div class="d-flex flex-column">
                                                <h6 class="mb-3 text-sm">Kayıt Tarihi:</h6>
                                                <span class="text-xs">@analysis.AnalysisDate</span>
                                            </div>
                                            <div class="ms-auto text-end">
                                                <a class="btn btn-link text-danger text-gradient px-3 mb-0" href="/Analysis/Remove?analysisId=@analysis.AnalysisId"><i class="far fa-trash-alt me-2" aria-hidden="true"></i>Sil</a>
                                                <a class="btn btn-link text-dark px-3 mb-0" onclick='showDocument("@analysis.AnalysisFolderName")'><i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true"></i>Göster</a>
                                            </div>
                                        </li>
                                        }
                                    </div>
                                    <li class="list-group-item border-0 p-4 mb-2 bg-gray-100 border-radius-lg">
                                        <ejs-uploader id="UploadAnalysis" autoUpload="false" success="onUploadSuccess" asyncSettings="@asyncAnalysisSettings" allowedExtensions=".jpeg, .jpg, .png" locale="tr"></ejs-uploader>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-xl-8">
                    <div class="card w-100">
                        <div class="card-header pb-0 px-3">
                            <h6 class="mb-0">Belge</h6>
                        </div>
                        <div class="card-body pt-4 p-3">
                            <img class="w-100 border-radius-md" id="show" src="https://via.placeholder.com/500x300.png?text=Görüntülemek+için+dosya+seçin">
                            @* <div class="container">
                                <canvas id="the-canvas" style="max-width: 100%;"></canvas>
                            </div> *@
                        </div>
                    </div>
                </div>               
            </div>
        </div>
    </div>
    <div class="tab-pane fade show" id="andulation" role="tabpanel" aria-labelledby="andulation-tab">
        <div class="container-fluid py-4">
            <div class="card">
                <div class="card-header card-header-primary card-header-text">
                    <div class="card-text">
                        <h4 class="card-title">Andülasyon Kayıtları</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="control-section">
                        <ejs-grid id="Grid" height="400px" width="%100" toolbar='@(new List<string>() {"Search", "Add", "Edit", "Delete"})'
                            allowGrouping="true" allowPaging="true" allowResizing="true" allowTextWrap="true" allowSorting="true" locale="tr-TR">
                                <e-data-manager adaptor="UrlAdaptor" url="/Andulation/Get" insertUrl="/Andulation/Insert?pid=@Model.PatientId" updateUrl="/Andulation/Update" removeUrl="/Andulation/Remove"></e-data-manager>
                                <e-grid-editSettings allowAdding="true" allowEditing="true" allowDeleting="true" showDeleteConfirmDialog="true"></e-grid-editSettings>
                                <e-grid-columns>
                                    <e-grid-column field="AndulationId" headerText="Id" isPrimaryKey="true" visible="false"></e-grid-column>
                                    <e-grid-column field="SessionDate" headerText="Tarihi" format='yMd' editType="datepickeredit" width="100px"></e-grid-column>
                                    <e-grid-column field="Session" headerText="Seans" editType="numericedit" edit='@(new { @params = new Syncfusion.EJ2.Inputs.NumericTextBox() { ValidateDecimalOnType = true, Decimals = 0, Format = "N"}})' width="80px"></e-grid-column>
                                    <e-grid-column field="Schedule" headerText="Program" editType="numericedit" edit='@(new { @params = new Syncfusion.EJ2.Inputs.NumericTextBox() { ValidateDecimalOnType = true, Decimals = 0, Format = "N"}})' width="80px"></e-grid-column>
                                    <e-grid-column field="Duration" headerText="Dakika" editType="numericedit" edit='@(new { @params = new Syncfusion.EJ2.Inputs.NumericTextBox() { ValidateDecimalOnType = true, Decimals = 0, Format = "N"}})' width="80px"></e-grid-column>
                                    <e-grid-column field="Vibration" headerText="Titreşim" editType="numericedit" edit='@(new { @params = new Syncfusion.EJ2.Inputs.NumericTextBox() { ValidateDecimalOnType = true, Decimals = 0, Format = "N"}})' width="80px"></e-grid-column>
                                    <e-grid-column field="Chest" headerText="Göğüs" editType="numericedit" width="80px"></e-grid-column>

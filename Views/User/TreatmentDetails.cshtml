                        </e-grid-columns>
                </ejs-grid>
            </div>
            <!-- ACCORDION ITEM -->
            <div class="my-3">
                <h6 class="text-primary" style="font-size: 1.2rem !important;">Andülasyon Ölçüm</h6>
